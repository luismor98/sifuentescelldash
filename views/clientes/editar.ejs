<%- include("../header"); %>
<div class="col-12">
    <br>
    <h1 class="text-center">Actualizar Cliente</h1>
    <br>
    <form method="post" action="/clientes/actualizar">

        <input value="<%= cliente.id %>" name="id" type="hidden">
		<div class="form-group">
            <label for="cedula">Cédula</label>
            <input value="<%= cliente.cedula %>" required id="cedula" placeholder="Cedula del Cliente"
                class="form-control" type="text" name="cedula" disabled>
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= cliente.nombre %>" required id="nombre" placeholder="Nombre del cliente"
                class="form-control" type="text" name="nombre">
        </div>
		<div class="form-group">
            <label for="telefono">Teléfono</label>
            <input value="<%= cliente.telefono %>" required id="telefono" placeholder="Telefono del cliente"
                class="form-control" type="text" name="telefono">
        </div>
		<div class="form-group">
            <label for="direccion">Dirección</label>
            <input value="<%= cliente.direccion %>" required id="direccion" placeholder="Dirección del cliente"
                class="form-control" type="text" name="direccion">
        </div>
        
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/clientes" class="btn btn-danger">Volver</a>
        </div>
    </form>
</div>
