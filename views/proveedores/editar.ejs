<%- include("../header"); %>
<div class="col-12">
    <br>
    <h1 class="text-center">Actualizar Proveedores</h1>
    <br>
    <form method="post" action="/proveedores/actualizar">

        <input value="<%= proveedor.id %>" name="id" type="hidden">
		<div class="form-group">
            <label for="rif">Rif</label>
            <input value="<%= proveedor.rif %>" required id="rif" placeholder="Rif del Proveedor"
                class="form-control" type="text" name="rif" disabled>
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= proveedor.nombre %>" required id="nombre" placeholder="Nombre del proveedor"
                class="form-control" type="text" name="nombre">
        </div>
		<div class="form-group">
            <label for="telefono">Teléfono</label>
            <input value="<%= proveedor.telefono %>" required id="telefono" placeholder="Telefono del proveedor"
                class="form-control" type="text" name="telefono">
        </div>
		<div class="form-group">
            <label for="direccion">Dirección</label>
            <input value="<%= proveedor.direccion %>" required id="direccion" placeholder="Dirección del proveedor"
                class="form-control" type="text" name="direccion">
        </div>
		<div class="form-group">
            <label for="contacto">Contacto</label>
            <input value="<%= proveedor.contacto %>" required id="contacto" placeholder="Nombre del contacto"
                class="form-control" type="text" name="contacto">
        </div>
        
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/proveedores" class="btn btn-danger">Volver</a>
        </div>
    </form>
</div>