<%- include("../header"); %>
<div class="col-12">
    <br>
    <h1 class="text-center">Agregar producto</h1>
    <br>
    <form method="post" action="/productos/insertar">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre" placeholder="Nombre del producto" class="form-control" type="text"
                name="nombre">
        </div>
		<div class="form-group">
            <label for="marca">Marca</label>
            <input required id="marca" placeholder="Marca del producto" class="form-control" type="text"
                name="marca">
        </div>
		<div class="form-group">
            <label for="especificaciones">Especificaciones</label>
            <input required id="especificaciones" placeholder="Especificaciones del producto" class="form-control" type="text"
                name="especificaciones">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input required id="precio" placeholder="Precio del producto" class="form-control" type="number"
                name="precio">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/productos" class="btn btn-danger text-white">Volver</a>
        </div>
    </form>
</div>