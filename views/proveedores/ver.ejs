<%- include("../headerprovee"); %>
<div class="col-12">
    <br>
    <h1 class="text-center">Listado de Proveedores</h1>
	<br>
    <h3 class="text-center">Buscador</h3>
	<div class="input-group">
       <input id="filtrar" type="text" class="form-control text-center" placeholder="Ingresa el Nombre o Cédula del Proveedor que deseas buscar...">
	</div>
	<br>
    <section>
        <div class="col-12 my-2 p-0 p-md-3">
            <div class="card bg-light">
                <div class="card-header text-black text-center" style="background:#61ec03ef; "><strong>Tabla de Proveedores</strong></div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class=" table table-hover table-bordered .table-responsive{-sm|-md|-lg|-xl}">
                                <thead>
                                        <tr>
                                            <th>Rif</th>
                                            <th>Nombre</th>
                                            <th>Teléfono</th>
                                            <th>Dirección</th>
                                            <th>Contacto</th>
                                            <th>Editar</th>
                                            <th>Eliminar</th>
                                        </tr>
                                </thead> 
                                <tbody class="buscar">
                                        <% proveedores.forEach(proveedor => { %>
                                            <tr>
                                                <td><%= proveedor.rif %></td>
                                                <td><%= proveedor.nombre %></td>
                                                <td><%= proveedor.telefono %></td>
                                                <td><%= proveedor.direccion %></td>
                                                <td><%= proveedor.contacto %></td>
                                                <td>
                                                    <a href="/proveedores/editar/<%= proveedor.id %>" class="btn btn-success">
                                                        Editar
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/proveedores/eliminar/<%= proveedor.id %>" class="btn btn-danger">
                                                        Eliminar
                                                    </a>
                                                </td>
                                            </tr>
                                        <% })%>
                                </tbody>
                            </table>
                        </div>    
                    </div>
                </div>    
            </div>    
        </div>    
    </section> 
</div>
