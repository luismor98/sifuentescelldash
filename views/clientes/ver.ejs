<%- include("../headerClien"); %>
<div class="col-12">
    <br>
    <h1 class="text-center">Listado de Clientes</h1>
	<br>
    <h3 class="text-center">Buscador</h3>
	<div class="input-group">
       <input id="filtrar" type="text" class="form-control text-center" placeholder="Ingresa el Nombre o CÃ©dula del Cliente que deseas buscar...">
	</div>
	<br>
    <section>
        <div class="col-12 my-2 p-0 p-md-3">
            <div class="card bg-light">
                <div class="card-header text-black text-center" style="background:#61ec03ef; "><strong>Tabla de Clientes</strong></div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class=" table table-hover table-bordered .table-responsive{-sm|-md|-lg|-xl}">
                                <thead>
                                    <tr>
                                        <th>Cedula</th>
                                        <th>Nombre</th>
                                        <th>Telefono</th>
                                        <th>Direccion</th>
                                        <th>Editar</th>
                                        <th>Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody class="buscar">
                                    <% clientes.forEach(cliente => { %>
                                    <tr>
                                        <td><%= cliente.cedula %></td>
                                        <td><%= cliente.nombre %></td>
                                        <td><%= cliente.telefono %></td>
                                        <td><%= cliente.direccion %></td>
                                        <td>
                                            <a href="/clientes/editar/<%= cliente.id %>" class="btn btn-success my-1">
                                                Editar
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/clientes/eliminar/<%= cliente.id %>" class="btn btn-danger my-1">
                                                Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                    <% })%>
                                </tbody>
                            </table>
                        </div>    
                    </div>
                </div>    
            </div>    
        </div>    
    </section> 
</div>
