<%- include("../header"); %>
<div class="col-12">
    <br>
    <h1 class="text-center">Agragar Cliente</h1>
    <br>
    <form method="post" action="/clientes/insertar">
	    <div class="form-group">
            <label for="cedula">Cedula</label>
            <input required id="cedula" placeholder="Cedula del cliente" class="form-control" type="text"
                name="cedula">
        </div>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input required id="nombre" placeholder="Nombre del cliente" class="form-control" type="text"
                name="nombre">
        </div>
		<div class="form-group">
            <label for="telefono">Telefono</label>
            <input required id="telefono" placeholder="Telefono del cliente" class="form-control" type="text"
                name="telefono">
        </div>
		<div class="form-group">
            <label for="direccion">Direccion</label>
            <input required id="direccion" placeholder="Direccion del cliente" class="form-control" type="text"
                name="direccion">
        </div>
        
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/clientes" class="btn btn-danger">Volver</a>
        </div>
    </form>
</div>